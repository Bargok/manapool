<!doctype html>
<html lang="nl">
<head>
    <title>{% block head_title %}Manapool{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('icon-font/css/fontello.css') }}">
        <link href='http://fonts.googleapis.com/css?family=Alegreya:700' rel='stylesheet' type='text/css'>

        {% stylesheets filter="compass"
            "@AppSiteBundle/Resources/assets/css/layout.scss"
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    <meta charset="UTF-8">
    <meta name="title" content="Manapool">
    <meta name="keywords" content="Manapool">
    <meta name="description" conntet="Manapool">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="content">
                <a href="{{ path("homepage") }}" class="logo">ManaPool</a>
                {% block search %}
                <div class="search">
                    <form action="{{ url('search') }}">
                        <input type="text" name="q" id="search-field" placeholder="Kaartnaam..." />
                        <button type="submit" class="icon-search"></button>
                    </form>
                </div>
                {% endblock %}
            </div>
        </header>
        <div class="content">
            {% block content %}{% endblock %}
        </div>
        <footer></footer>    
    </div>
    {% block javascripts_footer %}
        {% javascripts
            "@AppSiteBundle/Resources/assets/js/jquery-2.0.0.min.js"
            "@AppSiteBundle/Resources/assets/js/init.js"
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>